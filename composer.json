{
    "name": "you/the-project",
    "type": "project",
    "license": "proprietary",
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "wp-coding-standards/wpcs": "^2.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2",
        "wpackagist-plugin/debug-bar": "*",
        "bueltge/wordpress-admin-style": "*"
    },
    "extra": {
        "installer-paths": {
            "_content/themes/{$name}/": ["type:wordpress-theme"],
            "_content/plugins/{$name}/": ["type:wordpress-plugin"],
            "_content/mu-plugins/{$name}/": ["type:wordpress-muplugin"]
        }
	}
}
